<div id="simplePopup" class="simplePopup">
    <div class="popupHead"><h2>Enter your details to begin</h2><span class="close"></span></div>
    <div class="popupBody">
        <div class="img-wrap"><img src="images/large/{{src}}.png" width="330"/></div>
		<div class="form-caption"><img src="images/form.png" /></div>
        <div class="row">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" placeholder="Enter your name" />
        </div>
        <div class="row">
            <label for="email">Email</label>
            <input type="text" name="email" id="email" placeholder="Enter your email address" />
        </div>
        <div class="row">
            <label for="mobile">Mobile</label>
            <input type="text" name="mobile" id="mobile" placeholder="Enter your mobile no" />
        </div>
        <div class="row">
            <label for="website">Website</label>
            <input type="text" name="website" id="website" placeholder="Enter your website address" />
        </div>
        <div class="row">
            <div class="button-area">
                <a id="cancel" class="btn">Close</a>
                <a id="save" class="btn save">Let's rock</a>

            </div>
        </div>
    </div>
</div>
<div id="popupScreen"></div>